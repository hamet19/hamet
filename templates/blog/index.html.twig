{% extends 'base.html.twig'%}

{% block body %}
{% for article in articles %}
<article>
   <h2>{{article.title}}</h2>
   <div class="metadata">
   <h5>Ecrite le {{article.createAt | date ('d/m/y')}} a {{article.createAt | date ('H:i')}} dans la Categorie
    <mark> {{article.category.title}}</mark></h5>
   </div>
   <div class="content">
     <img src="{{article.image}}" alt="|">
     <p>
      {{ article.content | raw }}
     </p>
     <a href="{{path('show_blog',{'id':article.id})}}" class="btn btn-success">Lire La Suite</a>
     
   </div> 
 </article>
 {% endfor %}
 {% endblock %}